# MongoDB Connection String
MONGODB_URI=mongodb://localhost:27017/shopping_cart

# Session Secret (change this to a random string)
SESSION_SECRET=your-secure-random-secret-key-change-this-to-something-unique

# Gmail SMTP Configuration (for sending emails)
# Get app password from: https://myaccount.google.com/apppasswords
GMAIL_USER=your-email@gmail.com
GMAIL_APP_PASSWORD=your-16-character-app-password

# Twilio SMS Configuration (optional)
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Google OAuth 2.0 Credentials (optional)
# Get from: https://console.cloud.google.com
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Server Port
PORT=3000
